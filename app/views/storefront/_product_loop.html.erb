<div class="row">
  <% @products.each do |product| %>
  
	 <div class="modal fade" id="exampleModal_<%= product.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <h5 class="modal-title" id="exampleModalLabel"><%= product.name %></h5>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body">
	        <% if product.image.url.nil? == false %>
          		<p><%= image_tag product.image.url, size: 150, class: "img-responsive" %></p>
        	<% end %>
	        <h3><%= link_to product.name, product %></h3>
	        <p><%= product.description %>
	        <p><%= number_to_currency (product.price * 0.01) %></p>
	        <p>made by <%= product.brand %></p>
	      </div>
	      <div class="modal-footer">
	      	<p>
			  <%= form_tag add_to_cart_path do %>
			    <%= hidden_field_tag :product_id, product.id %>
			    <%= number_field_tag :quantity, 1, placeholder: "How many?" %>
			    <%= submit_tag "Add to Cart", class: "btn btn-primary" %>
			  <% end %>
			 </p>



	      </div>
	    </div>
	  </div>
	</div>

    <div class="col-xs-4">
      <div class="mywell">
        <% if product.image.url.nil? == false %>
          <p><%= image_tag product.image.url, size: 100, class: "img-responsive" %></p>
        <% end %>
        <h3><%= link_to product.name, product %></h3>
        <p><%= number_to_currency (product.price * 0.01) %></p>
        <p>
        	<%= form_tag add_to_cart_path do %>
			    <%= hidden_field_tag :product_id, product.id %>
			    <%= number_field_tag :quantity, 1, placeholder: "How many?" %>
			    <%= submit_tag "Add to Cart", class: "btn btn-primary" %>
			  <% end %>
        </p>
        <p>
          <a href="#" data-toggle="modal" data-target="#exampleModal_<%= product.id %>">
            <span class="glyphicon glyphicon-plus"></span> Quick Info
          </a>
        </p>
      </div>
    </div>
  <% end %>
</div>
